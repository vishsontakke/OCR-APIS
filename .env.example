# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# OCR Configuration
OCR_MODEL_LANG=en
OCR_WORKERS=4
OCR_DPI=150
OCR_GPU_ENABLED=False

# API Configuration
PORT=8000
API_WORKERS=4
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# File Configuration
MAX_FILE_SIZE_MB=50
TEMP_DIR=/tmp/ocr

# Performance
THREAD_POOL_SIZE=4
TASK_TIMEOUT=300
QUEUE_MAX_SIZE=10000

# Database (Optional)
DATABASE_URL=postgresql://user:password@localhost:5432/ocr_db
ENABLE_JOB_HISTORY=True

# Monitoring
ENABLE_METRICS=True
ENABLE_HEALTH_CHECK=True
